def onDraw():
    clear()
    textFont(FONT_ROBOTO_80)
    h = getHour()
    m = getMinute()
    hz = ""
    if h < 10: hz = "0"
    mz = ""
    if m < 10: mz = "0"

    time = hz + h + ":" + mz + m
    drawTextCentered(120,120, time)
    update()
    delay(1000)
